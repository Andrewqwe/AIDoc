<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.damian.aldoc">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--Do czytania zdjec(recept) z pamieci telefonu-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--Do robienia zdjec(recept)-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/GreenTheme">
        <provider
                android:name="android.support.v4.content.FileProvider"
                android:authorities="com.damian.aldoc.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
        <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/GreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".VisitsActivity"
                android:label="Visits"
                android:parentActivityName=".MainActivity"/>
        <activity
                android:name=".EditVisitActivity"
                android:label="Edit Visit"
                android:parentActivityName=".MainActivity"/>
        <activity
                android:name=".VisitActivity"
                android:label="Visit"
                android:parentActivityName=".VisitsActivity"/>
        <activity
                android:name=".calendar.CalendarActivity"
                android:label="Calendar"
                android:parentActivityName=".MainActivity"/>
        <activity
                android:name=".Diseases1Activity"
                android:label="Dziennik chorób"/>
        <activity
                android:name=".Diseases2Activity"
                android:label="Dziennik chorób"/>
        <activity
                android:name=".Diseases0Activity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:theme="@style/AppTheme.NoActionBar"
                android:label="Dziennik chorób"/>
        <activity
                android:name=".userProfile.UserProfileView"
                android:label="@string/title_activity_user_profile_view"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.damian.aldoc.MainActivity"/>
        </activity>
        <activity android:name=".PrescriptionActivity" android:label="Prescription">
        </activity>
        <activity
                android:name="com.damian.aldoc.FullScreenImageActivity"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".userProfile.UserProfileEditActivity"
            android:label="@string/title_activity_user_profile_edit"
            android:parentActivityName=".userProfile.UserProfileView"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.damian.aldoc.userProfile.UserProfileView" />
        </activity>
    </application>

</manifest>