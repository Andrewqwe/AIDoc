<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <TextView
            android:text="Nazwa leku:" style="@style/alertDialogTextViewStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <AutoCompleteTextView style="@style/alertDialogAutoCompleteTextViewStyle"
            android:id="@+id/prescriptionEntryEdit_medicineName"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView
            android:text="Dawkowanie:" style="@style/alertDialogTextViewStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/prescriptionEntryEdit_doseRate" style="@style/alertDialogEditTextStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>